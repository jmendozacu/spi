<widgets xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Widget:etc/widget.xsd">
    <widget id="binaryanvil_social_feeds_widget" class="BinaryAnvil\Federation\Block\SocialFeeds\Widget">
        <label>Social Feeds</label>
        <description>Widget for presentation your posts, pins and photos from most popular social networking sites</description>
        <parameters>
            <parameter name="container_class" xsi:type="text" required="false" visible="true">
                <label>Container CSS class</label>
                <description>*If not specified will assign default value</description>
            </parameter>
            <parameter name="feed_instance_list" xsi:type="multiselect" visible="true"
                       source_model="BinaryAnvil\Federation\Model\Config\Source\FeedInstance">
                <label>Feeds Type</label>
            </parameter>
        </parameters>
    </widget>
</widgets>