<script type='text/javascript'>
    require(['jquery'], function ($) {
        'use strict';

        $(document).ready(function () {
            let optionsBoard = $('#product-options-wrapper');

            /**
             * Option Picker in mobile
             */
            $('.option-picker').click(function () {
                let _this = $(this);
                let code = _this.attr('data-code');

                // Add/remove class
                if (_this.hasClass('open')) {
                    _this.removeClass('open');
                    optionsBoard.hide();
                } else {
                    $('.option-picker').removeClass('open');
                    _this.addClass('open');

                    $('.product-info-main .swatch-attribute').hide();
                    if (code) {
                        $('.swatch-attribute.' + code).show();
                    } else {
                        $('.swatch-attribute.is_apparel_rise_length').show();
                        $('.swatch-attribute.is_size').show();
                        $('.swatch-attribute.is_footwear_width').show();
                    }
                    optionsBoard.show();
                }
            });
        })
    })
</script>